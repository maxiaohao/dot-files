<settings>
  <profiles>
    <profile>
      <id>ignore-ssl</id>
      <properties>
        <maven.wagon.http.ssl.insecure>true</maven.wagon.http.ssl.insecure> <!-- for older maven -->
        <maven.wagon.http.ssl.allowall>true</maven.wagon.http.ssl.allowall>
        <aether.connector.https.securityMode>insecure</aether.connector.https.securityMode> <!-- for maven 3.9+ -->
      </properties>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>ignore-ssl</activeProfile>
  </activeProfiles>
</settings>

