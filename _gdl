#compdef gdl

_gdl() {
  local -a commands

	actions=(
    'c:clean'
    'cc:clean + compile'
    'ct:clean + test'
    'cb:clean + build'
    'cj:clean + jib'
  )

	if (( CURRENT == 2 )); then
		_describe -t commands 'commands' actions
  fi

	if (( CURRENT == 3 )); then
	  _alternative "dirs:subdirs:($(ls -d */ | sed 's/\// /g'))"
  fi

  return 0
}

_gdl
